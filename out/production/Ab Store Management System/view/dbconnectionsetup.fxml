<?xml version="1.0" encoding="UTF-8"?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXToolbar?>
<?import com.jfoenix.validation.RequiredFieldValidator?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane fx:id="rootPane" prefHeight="700.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DBConnectionSetup">
    <center>
        <AnchorPane prefHeight="600.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" fillWidth="false" style="-fx-background-color: #e8f0f0;" styleClass="btn-warning" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <VBox fx:id="depthVBox" alignment="CENTER" fillWidth="false" prefWidth="350.0" style="-fx-background-color: #e8f0f0;" styleClass="btn-warning">
                            <children>
                                <FontAwesomeIconView fill="#3098a8" glyphName="LOCK" size="50.0" />
                                <Label text="Database Setup" textFill="#2e86c1">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets bottom="5.0" />
                                    </VBox.margin>
                                </Label>
                                <Label fx:id="unsuccessfulLabel" textFill="RED">
                                    <font>
                                        <Font name="System Bold Italic" size="14.0" />
                                    </font>
                                </Label>
                                <GridPane alignment="CENTER" prefWidth="300.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <HBox spacing="20.0">
                                            <children>
                                                <JFXTextField fx:id="Ip_address" focusColor="#1667e9" labelFloat="true" prefWidth="300.0" promptText="IP Address" />
                                                <RequiredFieldValidator fx:id="ipAddressValidator" message="Username is required" />
                                            </children>
                                        </HBox>
                                        <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.rowIndex="2">
                                            <buttons>
                                                <JFXButton fx:id="testButton" buttonType="RAISED" ripplerFill="#a2c2f6" style="-fx-background-color: #2d76eb;" text="Test" textFill="WHITE">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                    <padding>
                                                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                                                    </padding>
                                                </JFXButton>
                                                <JFXButton fx:id="saveButton" buttonType="RAISED" ripplerFill="#a2c2f6" style="-fx-background-color: #2d76eb;" text="Save" textFill="WHITE">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                    <padding>
                                                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                                                    </padding>
                                                </JFXButton>
                                            </buttons>
                                            <GridPane.margin>
                                                <Insets right="20.0" />
                                            </GridPane.margin>
                                        </ButtonBar>
                                        <Text fx:id="bugText" fill="#e40404" strokeType="OUTSIDE" strokeWidth="0.0" GridPane.hgrow="NEVER" GridPane.rowIndex="4" GridPane.vgrow="ALWAYS" />
                                    </children>
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </GridPane>
                            </children>
                            <padding>
                                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                            </padding>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </children>
        </AnchorPane>
    </center>
    <top>
        <AnchorPane fx:id="headerPane" prefHeight="50.0" style="-fx-background-color: #83D9F7;" BorderPane.alignment="CENTER">
            <children>
                <JFXToolbar prefHeight="70.0" style="-fx-min-height: 70; -fx-background-color: #2E86C1;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <bottom>
                        <Label alignment="BOTTOM_LEFT" style="-fx-font-size: 28; -fx-text-fill: #F7F9F9; -fx-font-weight: bold;" text="AB-Store Management System " BorderPane.alignment="CENTER">
                            <padding>
                                <Insets left="40.0" />
                            </padding>
                        </Label>
                    </bottom>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </JFXToolbar>
            </children>
        </AnchorPane>
    </top>
</BorderPane>
