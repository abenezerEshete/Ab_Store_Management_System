<?xml version="1.0" encoding="UTF-8"?>
<?import com.jfoenix.controls.*?>
<?import com.jfoenix.validation.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="addProduct" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="controller.AddUserController">
    <children>
        <VBox layoutY="5.0" style="-fx-background-color: #FBFCFC;">
            <children>
                <HBox fillHeight="false">
                    <children>
                        <Label alignment="BOTTOM_LEFT" prefWidth="382.0"
                               style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #7387A8;"
                               text="Add User">
                            <padding>
                                <Insets top="30.0"/>
                            </padding>
                        </Label>
                        <Label fx:id="saveNotification" alignment="BOTTOM_LEFT"
                               style="-fx-font-size: 18; -fx-text-fill: #2258e1;">
                            <padding>
                                <Insets top="30.0"/>
                            </padding>
                        </Label>
                    </children>
                </HBox>
                <GridPane vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" maxWidth="1.7976931348623157E308"
                                           percentWidth="0.0"/>
                        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" maxWidth="1.7976931348623157E308"
                                           percentWidth="0.0"/>
                        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" percentWidth="0.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <HBox spacing="10.0">
                            <children>
                                <Label prefWidth="100.0" style="-fx-font-size: 14; -fx-text-fill: #7387A8;"
                                       text="Name ">
                                    <HBox.margin>
                                        <Insets top="10.0"/>
                                    </HBox.margin>
                                </Label>
                                <JFXTextField fx:id="name" prefWidth="250.0" style="-fx-background-color: #EBF5FB;">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </JFXTextField>
                                <RequiredFieldValidator fx:id="nameRequiredValidator" message="This field is required"/>
                            </children>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                        </HBox>
                        <HBox prefHeight="30.0" spacing="11.0" GridPane.rowIndex="4">
                            <children>
                                <Label prefWidth="100.0" style="-fx-font-size: 14; -fx-text-fill: #7387A8;"
                                       text="Password">
                                    <HBox.margin>
                                        <Insets top="10.0"/>
                                    </HBox.margin>
                                </Label>
                                <JFXPasswordField fx:id="password" prefWidth="250.0"
                                                  style="-fx-background-color: #EBF5FB;"/>
                                <RequiredFieldValidator fx:id="passwordValidator"/>
                            </children>
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                        </HBox>
                        <HBox spacing="11.0" GridPane.columnIndex="1">
                            <children>
                                <Label alignment="CENTER" prefWidth="100.0"
                                       style="-fx-font-size: 14; -fx-text-fill: #7387A8;" text="UserName"
                                       HBox.hgrow="ALWAYS">
                                    <HBox.margin>
                                        <Insets top="10.0"/>
                                    </HBox.margin>
                                </Label>
                                <JFXTextField fx:id="username" prefWidth="250.0" style="-fx-background-color: #EBF5FB;">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </JFXTextField>
                            </children>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                        </HBox>
                        <RequiredFieldValidator fx:id="usernameValidator"/>
                        <HBox spacing="11.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                            <children>
                                <Label alignment="CENTER_RIGHT" prefWidth="100.0"
                                       style="-fx-font-size: 14; -fx-text-fill: #7387A8;" text="Active"
                                       HBox.hgrow="ALWAYS">
                                    <HBox.margin>
                                        <Insets top="10.0"/>
                                    </HBox.margin>
                                </Label>
                                <NumberValidator fx:id="tinNumberValidator" message="Value must be a number"/>
                                <JFXCheckBox fx:id="active" text="." textOverrun="CENTER_WORD_ELLIPSIS">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                    <HBox.margin>
                                        <Insets top="8.0"/>
                                    </HBox.margin>
                                </JFXCheckBox>
                            </children>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                        </HBox>
                        <HBox prefHeight="30.0" spacing="11.0" GridPane.rowIndex="2">
                            <children>
                                <Label prefWidth="100.0" style="-fx-font-size: 14; -fx-text-fill: #7387A8;"
                                       text="Phone">
                                    <HBox.margin>
                                        <Insets top="10.0"/>
                                    </HBox.margin>
                                </Label>
                                <JFXTextField fx:id="phone" prefWidth="250.0" style="-fx-background-color: #EBF5FB;">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </JFXTextField>
                                <NumberValidator fx:id="phoneNumebrValidator" message="Value must be a number"/>
                            </children>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                        </HBox>
                        <HBox prefHeight="30.0" spacing="11.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <children>
                                <Label alignment="CENTER" prefWidth="100.0"
                                       style="-fx-font-size: 14; -fx-text-fill: #7387A8;" text="Type">
                                    <HBox.margin>
                                        <Insets top="10.0"/>
                                    </HBox.margin>
                                </Label>
                                <JFXComboBox fx:id="type" prefWidth="250.0"/>
                            </children>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="15.0" right="10.0" top="15.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0"/>
                    </VBox.margin>
                </GridPane>
                <HBox spacing="30.0">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER_RIGHT" nodeOrientation="LEFT_TO_RIGHT">
                    <children>
                        <ButtonBar buttonMinWidth="0.0">
                            <buttons>
                                <JFXButton fx:id="cancel" buttonType="RAISED" onAction="#cancelCloseWindow"
                                           prefWidth="100.0" ripplerFill="#81acee"
                                           style="-fx-border-width: 1; -fx-border-color: #81acee;" text="Cancel"
                                           textFill="#270dcd">
                                    <font>
                                        <Font name="System Bold" size="12.0"/>
                                    </font>
                                    <padding>
                                        <Insets bottom="8.0" left="5.0" right="5.0" top="8.0"/>
                                    </padding>
                                </JFXButton>
                                <JFXButton fx:id="resetInput" buttonType="RAISED" onAction="#deletInput"
                                           prefWidth="100.0" ripplerFill="#a2c2f6"
                                           style="-fx-background-color: #EC7063;" text="Clear" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0"/>
                                    </font>
                                    <padding>
                                        <Insets bottom="8.0" left="5.0" right="5.0" top="8.0"/>
                                    </padding>
                                </JFXButton>
                                <JFXButton fx:id="saveButton" buttonType="RAISED" onAction="#saveData" prefWidth="100.0"
                                           ripplerFill="#a2c2f6" style="-fx-background-color: #2d76eb;" text="Save"
                                           textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0"/>
                                    </font>
                                    <padding>
                                        <Insets bottom="8.0" left="5.0" right="5.0" top="8.0"/>
                                    </padding>
                                </JFXButton>
                            </buttons>
                            <HBox.margin>
                                <Insets bottom="10.0"/>
                            </HBox.margin>
                        </ButtonBar>
                    </children>
                    <padding>
                        <Insets right="20.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="20.0"/>
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets left="10.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
