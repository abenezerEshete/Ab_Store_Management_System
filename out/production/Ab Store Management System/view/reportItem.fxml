<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171">
    <children>
        <Label fx:id="nameLabel" style="-fx-font-size: 16; -fx-font-weight: bold;" text="name">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Label>
        <Label fx:id="detailLabel"
               style="-fx-alignment: center; -fx-background-radius: 6; -fx-font-size: 13; -fx-font-weight: bold;"
               text="detail">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <padding>
                <Insets bottom="3.0" left="3.0" right="2.0" top="3.0"/>
            </padding>
        </Label>
        <HBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="amountLabel" alignment="CENTER" style="-fx-font-size: 14;" text="Amount:"/>
            </children>
            <HBox.margin>
                <Insets left="30.0"/>
            </HBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</HBox>
