<?xml version="1.0" encoding="UTF-8"?>
<?import com.jfoenix.controls.*?>
<?import com.jfoenix.validation.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="editWindows" alignment="CENTER"
      xmlns="http://javafx.com/javafx/8.0.171" fx:controller="controller.EditProfile">
    <children>
        <Label alignment="CENTER" style="-fx-font-size: 20; -fx-font-weight: bold;" text="Edit Profile">
            <VBox.margin>
                <Insets left="30.0" top="10.0"/>
            </VBox.margin>
        </Label>
        <Label fx:id="savedNotification" alignment="CENTER" contentDisplay="RIGHT" nodeOrientation="RIGHT_TO_LEFT"
               textFill="#2258e1">
            <font>
                <Font size="18.0"/>
            </font>
            <VBox.margin>
                <Insets left="30.0" top="10.0"/>
            </VBox.margin>
        </Label>
        <GridPane alignment="CENTER" style="-fx-border-color: #a2b6e4; -fx-border-width: 1;" vgap="30.0">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" maxWidth="1.7976931348623157E308"
                                   percentWidth="0.0"/>
                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" percentWidth="0.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <HBox prefHeight="30.0" prefWidth="524.0" spacing="10.0">
                    <children>
                        <Label alignment="CENTER" style="-fx-font-size: 14;" text="Name       ">
                            <HBox.margin>
                                <Insets top="10.0"/>
                            </HBox.margin>
                        </Label>
                        <RequiredFieldValidator fx:id="nameRequiredValidator" message="This field is required"/>
                        <JFXTextField fx:id="name" prefWidth="300.0" style="-fx-background-color: #EBF5FB;">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </JFXTextField>
                    </children>
                    <padding>
                        <Insets left="10.0"/>
                    </padding>
                </HBox>
                <HBox prefHeight="30.0" prefWidth="524.0" spacing="11.0" GridPane.rowIndex="1">
                    <children>
                        <Label alignment="CENTER" style="-fx-font-size: 14;" text="Username">
                            <HBox.margin>
                                <Insets top="10.0"/>
                            </HBox.margin>
                        </Label>
                        <RequiredFieldValidator fx:id="userNameRequiredValidator" message="This field is required"/>
                        <JFXTextField fx:id="userName" prefWidth="300.0" style="-fx-background-color: #EBF5FB;">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </JFXTextField>
                    </children>
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                    <padding>
                        <Insets left="10.0"/>
                    </padding>
                </HBox>
                <HBox spacing="11.0" GridPane.rowIndex="2">
                    <children>
                        <Label alignment="CENTER" style="-fx-font-size: 14;" text="Phone no. ">
                            <HBox.margin>
                                <Insets top="10.0"/>
                            </HBox.margin>
                        </Label>
                        <NumberValidator fx:id="phoneNumberValidator" message="This Field must be Number."/>
                        <JFXTextField fx:id="phone" onAction="#saveuser" prefWidth="300.0"
                                      style="-fx-background-color: #EBF5FB;">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </JFXTextField>
                        <RequiredFieldValidator fx:id="phoneRequiredValidator" message="This field is required"/>
                    </children>
                    <padding>
                        <Insets left="10.0"/>
                    </padding>
                </HBox>
                <HBox spacing="11.0" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.hgrow="ALWAYS">
                    <children>
                        <Label alignment="CENTER" style="-fx-font-size: 14;" text="Old Password" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets top="10.0"/>
                            </HBox.margin>
                        </Label>
                        <RequiredFieldValidator fx:id="oldPasswordRequiredValidator" message="This field is required"/>
                        <JFXPasswordField fx:id="oldPasswordf" prefWidth="300.0" style="-fx-background-color: #EBF5FB;">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </JFXPasswordField>
                    </children>
                    <padding>
                        <Insets left="10.0"/>
                    </padding>
                </HBox>
                <HBox spacing="11.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <Label alignment="CENTER" style="-fx-font-size: 14;" text="new Password">
                            <HBox.margin>
                                <Insets top="10.0"/>
                            </HBox.margin>
                        </Label>
                        <RequiredFieldValidator fx:id="newPasswordRequiredValidator" message="This field is required"/>
                        <JFXPasswordField fx:id="newPasswordf" prefWidth="300.0" style="-fx-background-color: #EBF5FB;">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </JFXPasswordField>
                    </children>
                    <padding>
                        <Insets left="10.0"/>
                    </padding>
                </HBox>
            </children>
            <VBox.margin>
                <Insets bottom="30.0" left="10.0" right="10.0"/>
            </VBox.margin>
            <padding>
                <Insets bottom="30.0" left="10.0" right="10.0" top="30.0"/>
            </padding>
        </GridPane>
        <HBox alignment="CENTER_RIGHT" spacing="20.0">
            <children>
                <Label fx:id="err" textFill="#ff3535">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <JFXButton fx:id="save" graphicTextGap="8.0" prefHeight="30.0" prefWidth="90.0"
                           style="-fx-background-color: #00C0EF;" text="Save" textFill="WHITE">
                    <font>
                        <Font name="Roboto Medium" size="14.0"/>
                    </font>
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="SAVE" size="16"/>
                    </graphic>
                </JFXButton>
            </children>
            <padding>
                <Insets right="20.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
