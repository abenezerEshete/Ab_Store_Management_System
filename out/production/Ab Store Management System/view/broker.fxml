<?xml version="1.0" encoding="UTF-8"?>
<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="invoice" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="controller.BrokerController">
    <children>
        <VBox nodeOrientation="LEFT_TO_RIGHT" stylesheets="@../style/Style.css" AnchorPane.bottomAnchor="30.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <JFXToolbar style="-fx-background-color: #FDFEFE;">
                    <right>
                        <VBox BorderPane.alignment="CENTER">
                            <children>
                                <JFXButton fx:id="addBroker" alignment="CENTER" contentDisplay="RIGHT"
                                           graphicTextGap="10.0" onAction="#addBroker"
                                           style="-fx-background-radius: 30; -fx-border-radius: 30; -fx-background-color: #00C0EF;"
                                           text="Add Broker" textFill="WHITE">
                                    <graphic>
                                        <FontAwesomeIconView fill="#faf7f7" glyphName="PLUS" size="18"
                                                             strokeLineCap="ROUND" strokeLineJoin="ROUND"
                                                             strokeType="INSIDE">
                                            <rotationAxis>
                                                <Point3D/>
                                            </rotationAxis>
                                        </FontAwesomeIconView>
                                    </graphic>
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </JFXButton>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="20.0"/>
                            </padding>
                        </VBox>
                    </right>
                    <left>
                        <Label fx:id="countList" alignment="CENTER" contentDisplay="CENTER"
                               style="-fx-font-size: 18; -fx-font-weight: bold;" text="Brokers"
                               BorderPane.alignment="CENTER">
                            <padding>
                                <Insets left="30.0" top="30.0"/>
                            </padding>
                        </Label>
                    </left>
                    <center>
                        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                            <children>
                                <JFXTextField fx:id="searchText" minWidth="250.0" onAction="#productSearch"
                                              promptText="Search Broker">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                    <HBox.margin>
                                        <Insets left="10.0"/>
                                    </HBox.margin>
                                </JFXTextField>
                                <JFXButton fx:id="productTypeSearch" contentDisplay="GRAPHIC_ONLY" graphicTextGap="10.0"
                                           minWidth="40.0" onAction="#productSearch" prefWidth="30.0"
                                           ripplerFill="#90e8e6"
                                           style="-fx-background-color: #F4F6F6; -fx-background-radius: 15; -fx-border-radius: 15;"
                                           text="." textFill="WHITE">
                                    <font>
                                        <Font name="Roboto Medium" size="14.0"/>
                                    </font>
                                    <graphic>
                                        <FontAwesomeIconView fill="#00c0ef" glyphName="SEARCH" size="20"
                                                             strokeLineCap="ROUND" strokeLineJoin="ROUND"
                                                             strokeType="INSIDE"/>
                                    </graphic>
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </JFXButton>
                            </children>
                            <padding>
                                <Insets left="20.0" top="20.0"/>
                            </padding>
                        </HBox>
                    </center>
                </JFXToolbar>
                <JFXTabPane prefWidth="500.0"/>
                <Separator>
                    <VBox.margin>
                        <Insets bottom="3.0"/>
                    </VBox.margin>
                </Separator>
                <TableView fx:id="brokerTable" onKeyPressed="#onkeyPresed" onMouseClicked="#getSelectedItem"
                           style="-fx-font-size: 14;" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="brokerId" editable="false" prefWidth="75.0" resizable="false"
                                     sortable="false" text="id" visible="false"/>
                        <TableColumn fx:id="brokerNumber" maxWidth="50.0" minWidth="50.0" prefWidth="50.0"
                                     resizable="false" text="no."/>
                        <TableColumn fx:id="brokerName" maxWidth="-1.0" minWidth="300.0" prefWidth="-1.0" text="Name"/>
                        <TableColumn fx:id="brokerAddress" minWidth="250.0" prefWidth="-1.0" text="Address"/>
                        <TableColumn fx:id="brokerPhone" maxWidth="-1.0" minWidth="200.0" prefWidth="-1.0"
                                     sortable="false" text="Phone Number"/>
                        <TableColumn fx:id="brokerTin" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Tin"/>
                    </columns>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </TableView>
                <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="3.0">
                    <children>
                        <JFXButton fx:id="next" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" graphicTextGap="10.0"
                                   onAction="#nextload" ripplerFill="#756666" style="-fx-background-color: #00C0EF;"
                                   text="." textFill="WHITE">
                            <font>
                                <Font size="1.0"/>
                            </font>
                            <graphic>
                                <FontAwesomeIconView fill="#fcf8f8" glyphName="ANGLE_RIGHT" size="30"
                                                     strokeLineCap="ROUND" strokeLineJoin="ROUND" strokeType="INSIDE"/>
                            </graphic>
                            <padding>
                                <Insets left="15.0" right="15.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets bottom="2.0" top="3.0"/>
                            </HBox.margin>
                        </JFXButton>
                        <Label fx:id="itemPage" alignment="CENTER" minWidth="70.0"
                               style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #7387A8;" text="123">
                            <padding>
                                <Insets top="5.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets left="3.0" right="3.0"/>
                            </HBox.margin>
                        </Label>
                        <JFXButton fx:id="back" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" graphicTextGap="10.0"
                                   onAction="#backpage" ripplerFill="#756666" style="-fx-background-color: #00C0EF;"
                                   text="." textFill="WHITE">
                            <font>
                                <Font size="1.0"/>
                            </font>
                            <graphic>
                                <FontAwesomeIconView fill="#fcf8f8" glyphName="ANGLE_LEFT" size="30"
                                                     strokeLineCap="ROUND" strokeLineJoin="ROUND" strokeType="INSIDE"/>
                            </graphic>
                            <padding>
                                <Insets left="15.0" right="15.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets bottom="2.0" top="3.0"/>
                            </HBox.margin>
                        </JFXButton>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
