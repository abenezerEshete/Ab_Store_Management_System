                                <RequiredFieldValidator fx:id="amountREquieredValidator"/>
                                <JFXTextField fx:id="amountField" prefWidth="300.0" style="-fx-background-color: #FFF;"
                                              unFocusColor="#3b3b3c">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                                    </VBox.margin>
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" top="10.0"/>
                                    </padding>
                                </JFXTextField>
                                <JFXButton fx:id="move" buttonType="RAISED" contentDisplay="RIGHT" graphicTextGap="10.0"
