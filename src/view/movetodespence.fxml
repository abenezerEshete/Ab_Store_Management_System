                            <padding>
                                <Insets top="30.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets left="30.0"/>
                            </HBox.margin>
                        </Label>
                        <Label fx:id="notification" alignment="CENTER" prefWidth="382.0"
                               style="-fx-font-size: 16; -fx-text-fill: red;">
