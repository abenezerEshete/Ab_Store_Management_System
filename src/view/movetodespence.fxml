                                       wrapText="true">
                                    <VBox.margin>
                                        <Insets bottom="20.0"/>
                                    </VBox.margin>
                                    <padding>
                                        <Insets left="10.0" right="10.0"/>
                                    </padding>
                                </Label>
                                <Label fx:id="totalAmount1" alignment="TOP_LEFT" style="-fx-font-size: 14;"
                                       text="Move Amount" textFill="WHITE"/>
