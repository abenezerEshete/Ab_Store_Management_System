<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="controller.Dashboard">
    <children>
        <ScrollPane fitToHeight="true" fitToWidth="true" minViewportWidth="10.0" pannable="true" VBox.vgrow="ALWAYS">
            <content>
                <VBox>
                    <children>
                        <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                            <children>
                                <PieChart fx:id="sellingDrugPieChart" title="Most selled Product for Last 30 Days"/>
                                <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label alignment="CENTER" text="Alert Store Product ">
                                            <font>
                                                <Font size="18.0"/>
                                            </font>
                                        </Label>
                                        <ListView fx:id="alertProductListView" style="-fx-background-color: #f1eeee;"
                                                  VBox.vgrow="NEVER"/>
                                    </children>
                                </VBox>
                            </children>
                            <padding>
                                <Insets right="10.0"/>
                            </padding>
                        </HBox>
                        <Separator prefWidth="200.0">
                            <VBox.margin>
                                <Insets bottom="10.0" top="10.0"/>
                            </VBox.margin>
                            <effect>
                                <InnerShadow color="#33b4eb" radius="38.91" width="136.64"/>
                            </effect>
                        </Separator>
                        <HBox>
                            <children>
                                <BarChart fx:id="weeklyReportBarChart" title="Sales report for last 7 days"
                                          HBox.hgrow="ALWAYS">
                                    <xAxis>
                                        <CategoryAxis fx:id="saleXAxis" label="Date" tickLabelFill="#4667ea">
                                            <tickLabelFont>
                                                <Font size="12.0"/>
                                            </tickLabelFont>
                                        </CategoryAxis>
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis fx:id="saleYAxis" label="Number of Sales" side="LEFT"
                                                    tickLabelFill="#4667ea">
                                            <tickLabelFont>
                                                <Font size="12.0"/>
                                            </tickLabelFont>
                                        </NumberAxis>
                                    </yAxis>
                                </BarChart>
                                <Separator orientation="VERTICAL" prefHeight="200.0" HBox.hgrow="ALWAYS">
                                    <HBox.margin>
                                        <Insets left="10.0"/>
                                    </HBox.margin>
                                </Separator>
                                <BarChart fx:id="monthlyReportBarChart" title="weekly sales income report"
                                          HBox.hgrow="ALWAYS">
                                    <xAxis>
                                        <CategoryAxis fx:id="incomeXAxis" label="Date" side="BOTTOM">
                                            <tickLabelFont>
                                                <Font size="12.0"/>
                                            </tickLabelFont>
                                        </CategoryAxis>
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis fx:id="incomeYAxis" label="Income(Birr)" side="LEFT"
                                                    tickLabelFill="#4667ea">
                                            <tickLabelFont>
                                                <Font size="12.0"/>
                                            </tickLabelFont>
                                        </NumberAxis>
                                    </yAxis>
                                </BarChart>
                            </children>
                            <padding>
                                <Insets bottom="10.0"/>
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="5.0"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
