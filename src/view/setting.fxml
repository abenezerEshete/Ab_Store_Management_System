<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import com.jfoenix.validation.DoubleValidator?>
<?import com.jfoenix.validation.RequiredFieldValidator?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import com.jfoenix.validation.IntegerValidator?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="20.0" style="-fx-background-color: #FBFCFC;"
      xmlns="http://javafx.com/javafx/8.0.171" fx:controller="controller.SettingController">
    <children>
        <HBox alignment="CENTER" minWidth="400.0">
            <children>
                <Label alignment="CENTER" style="-fx-font-size: 20; -fx-font-weight: bold;" text="Setting"/>
            </children>
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
        </HBox>
        <VBox>
            <children>
                <Label alignment="CENTER" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #7387A8;"
                       text="Company Information">
                    <VBox.margin>
                        <Insets bottom="5.0" left="20.0" top="10.0"/>
                    </VBox.margin>
                </Label>
                <GridPane hgap="5.0" style="-fx-border-width: 1; -fx-border-color: #D6EAF8;" vgap="25.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <HBox spacing="10.0">
                            <children>
                                <Label alignment="CENTER" style="-fx-font-size: 14; -fx-text-fill: #7387A8;"
                                       text="Company Name">
                                    <HBox.margin>
                                        <Insets top="10.0"/>
                                    </HBox.margin>
                                </Label>
                                <JFXTextField fx:id="campanyName" prefWidth="300.0"
                                              style="-fx-background-color: #EBF5FB;">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </JFXTextField>
                            </children>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                        </HBox>
                        <HBox spacing="65.0" GridPane.columnIndex="1">
                            <children>
                                <Label alignment="CENTER" style="-fx-font-size: 14; -fx-text-fill: #7387A8;"
                                       text="Address"/>
                                <JFXTextField fx:id="cumpanyAddress" prefWidth="300.0"
                                              style="-fx-background-color: #EBF5FB;">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </JFXTextField>
                            </children>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                        </HBox>
                        <HBox spacing="22.0" GridPane.rowIndex="1">
                            <children>
                                <Label alignment="CENTER" style="-fx-font-size: 14; -fx-text-fill: #7387A8;"
                                       text="Contact name">
                                    <HBox.margin>
                                        <Insets top="10.0"/>
                                    </HBox.margin>
                                </Label>
                                <JFXTextField fx:id="campanyContact" prefWidth="300.0"
                                              style="-fx-background-color: #EBF5FB;">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </JFXTextField>
                            </children>
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                        </HBox>
                        <HBox spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <Label alignment="CENTER" style="-fx-font-size: 14; -fx-text-fill: #7387A8;"
                                       text="Phone Number"/>
                                <JFXTextField fx:id="cumpanyPhone" prefWidth="300.0"
                                              style="-fx-background-color: #EBF5FB;">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </JFXTextField>
                            </children>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                        </HBox>
                        <HBox spacing="78.0" GridPane.rowIndex="2">
                            <children>
                                <Label alignment="BOTTOM_RIGHT" style="-fx-font-size: 14; -fx-text-fill: #7387A8;"
                                       text="Email">
                                    <HBox.margin>
                                        <Insets top="10.0"/>
                                    </HBox.margin>
                                </Label>
                                <JFXTextField fx:id="companyEmail" prefWidth="300.0"
                                              style="-fx-background-color: #EBF5FB;">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </JFXTextField>
                            </children>
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                        </HBox>
                        <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <children>
                                <Label alignment="CENTER" style="-fx-font-size: 14; -fx-text-fill: #7387A8;"
                                       text="Receipt Message"/>
                                <JFXTextField fx:id="companyMessage" prefWidth="300.0"
                                              style="-fx-background-color: #EBF5FB;">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </JFXTextField>
                            </children>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0"/>
                    </padding>
                </GridPane>
            </children>
        </VBox>
        <HBox spacing="10.0" visible="false">
            <children>
                <Label alignment="CENTER" style="-fx-font-size: 14; -fx-text-fill: #7387A8;" text="Items/page    ">
                    <HBox.margin>
                        <Insets top="10.0"/>
                    </HBox.margin>
                </Label>
                <JFXComboBox fx:id="itemPerPage" labelFloat="true" prefWidth="80.0" style="-jfx-focus-color: #D6EAF8;"
                             unFocusColor="#141414">
                    <effect>
                        <Glow/>
                    </effect>
                </JFXComboBox>
            </children>
            <padding>
                <Insets left="10.0"/>
            </padding>
        </HBox>
        <HBox spacing="20.0">
            <children>
                <Label alignment="CENTER" style="-fx-font-size: 14; -fx-text-fill: #7387A8;" text="Auto print ">
                    <HBox.margin>
                        <Insets top="10.0"/>
                    </HBox.margin>
                </Label>
                <JFXCheckBox fx:id="autoPrint" contentDisplay="GRAPHIC_ONLY" minHeight="40.0" minWidth="50.0"/>
            </children>
            <padding>
                <Insets left="10.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER_RIGHT">
            <children>
                <JFXButton fx:id="save" alignment="CENTER" graphicTextGap="8.0" onAction="#saveData" prefWidth="120.0"
                           style="-fx-background-color: #00C0EF;" text="Save" textFill="WHITE">
                    <font>
                        <Font name="Roboto Medium" size="14.0"/>
                    </font>
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="SAVE" size="16"/>
                    </graphic>
                    <padding>
                        <Insets bottom="5.0" left="20.0" right="20.0" top="5.0"/>
                    </padding>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </JFXButton>
            </children>
            <VBox.margin>
                <Insets right="20.0"/>
            </VBox.margin>
        </HBox>
        <DoubleValidator fx:id="doubleValidator"/>
        <IntegerValidator fx:id="integerValidator"/>
        <RequiredFieldValidator fx:id="requieredValidator"/>
    </children>
    <padding>
        <Insets left="10.0"/>
    </padding>
</VBox>
