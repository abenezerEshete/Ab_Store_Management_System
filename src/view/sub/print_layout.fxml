<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="print_layout" maxWidth="550.0" minWidth="550.0"
            xmlns="http://javafx.com/javafx/8.0.171" fx:controller="main.component.controller.Print_controller">
    <children>
        <VBox alignment="CENTER" layoutY="30.0" minWidth="550.0" prefWidth="550.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">
            <children>
                <Label fx:id="cumpanyName" alignment="CENTER"
                       style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #7387A8;" text="Drug Store Name">
                    <padding>
                        <Insets bottom="10.0"/>
                    </padding>
                </Label>
                <Label fx:id="CustomerName" alignment="CENTER"
                       style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #7387A8;">
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Label>
                <Label fx:id="InvoiceNumber" alignment="CENTER" style="-fx-font-size: 15; -fx-text-fill: #7387A8;"
                       text="Invoice Number:1254545454565"/>
                <Label fx:id="date" alignment="CENTER" style="-fx-font-size: 15; -fx-text-fill: #7387A8;"
                       text="Date:10/12/12"/>
                <TableView fx:id="printTable" fixedCellSize="0.0" minWidth="-Infinity" snapToPixel="false">
                    <columns>
                        <TableColumn fx:id="item" maxWidth="300.0" minWidth="300.0" prefWidth="300.0" resizable="false"
                                     text="Item"/>
                        <TableColumn fx:id="amount" maxWidth="55.0" minWidth="55.0" prefWidth="55.0" text="Qty"/>
                        <TableColumn fx:id="unitPrice" maxWidth="70.0" minWidth="55.0" prefWidth="70.0"
                                     text="Unit price"/>
                        <TableColumn fx:id="TotalPrice" maxWidth="75.0" minWidth="75.0" prefWidth="75.0"
                                     resizable="false" text="Total price"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <Label fx:id="message" alignment="CENTER"
                       style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #7387A8;" text="Thank you!">
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Label>
            </children>
        </VBox>
        <Text opacity="0.11" rotate="-45.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Attachment" visible="false"
              AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="200.0">
            <font>
                <Font size="96.0"/>
            </font>
        </Text>
    </children>
</AnchorPane>
